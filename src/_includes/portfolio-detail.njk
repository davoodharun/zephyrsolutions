---
layout: layouts/base
eleventyComputed:
  title: "{{ portfolioItem.data.title }}"
  description: "{{ portfolioItem.data.summary }}"
---

<article class="portfolio-detail">
  {% if portfolioItem.data.heroImage %}
    <div class="portfolio-detail__hero">
      <img src="{{ portfolioItem.data.heroImage }}" alt="{{ portfolioItem.data.heroImageAlt | default(portfolioItem.data.title) }}" class="portfolio-detail__hero-image">
    </div>
  {% endif %}

  <header class="portfolio-detail__header">
    <h1 class="portfolio-detail__title">{{ portfolioItem.data.title }}</h1>
    {% if portfolioItem.data.client %}
      <p class="portfolio-detail__client">Client: {{ portfolioItem.data.client }}</p>
    {% endif %}
    {% if portfolioItem.data.date %}
      <time class="portfolio-detail__date" datetime="{{ portfolioItem.data.date }}">{{ portfolioItem.data.date | date }}</time>
    {% endif %}
  </header>

  {% if portfolioItem.data.industries or item.data.servicesUsed %}
    <div class="portfolio-detail__meta">
      {% if portfolioItem.data.industries %}
        <div class="portfolio-detail__tags">
          <strong>Industries:</strong>
          {% for industry in portfolioItem.data.industries %}
            <span class="tag tag--industry">{{ industry }}</span>
          {% endfor %}
        </div>
      {% endif %}
      {% if portfolioItem.data.servicesUsed %}
        <div class="portfolio-detail__tags">
          <strong>Services:</strong>
          {% for service in portfolioItem.data.servicesUsed %}
            <span class="tag tag--service">{{ service }}</span>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  {% endif %}

  {% if portfolioItem.data.summary %}
    <div class="portfolio-detail__summary">
      <p class="lead">{{ portfolioItem.data.summary }}</p>
    </div>
  {% endif %}

  <div class="portfolio-detail__content">
    {{ portfolioItem.templateContent | safe }}
  </div>

  <nav class="portfolio-detail__navigation">
    <a href="/work/" class="portfolio-detail__back-link">‚Üê Back to Portfolio</a>
  </nav>
</article>
